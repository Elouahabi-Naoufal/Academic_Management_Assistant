<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Archive Current Year"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select what to archive:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <CheckBox
        android:id="@+id/classesCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“š Classes &amp; Schedules"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:checked="true" />

    <CheckBox
        android:id="@+id/modulesCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“– Modules &amp; Subjects"
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/selectAllBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select All / Deselect All"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.Button.OutlinedButton" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âš ï¸ This action cannot be undone. Archived data will be moved to previous years."
        android:textSize="12sp"
        android:alpha="0.7"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/archiveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Archive Selected Data"
        android:textSize="16sp" />

</LinearLayout>